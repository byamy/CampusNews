<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity"
          minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="500.0" prefWidth="500.0"
          style="-fx-background-color: TEAL; -fx-border-color: midnightblue;"
          xmlns="http://javafx.com/javafx/21"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.gui.CreatePageController">

    <!-- Top and bottom padding for breathing room -->
    <padding>
        <Insets top="20" bottom="40"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints prefWidth="500.0" hgrow="SOMETIMES"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints prefHeight="70"/>     <!-- Title -->
        <RowConstraints prefHeight="360"/>    <!-- Form -->
    </rowConstraints>

    <children>

        <!-- TITLE -->
        <Label text="Create New Event"
               textFill="#ffd942"
               GridPane.rowIndex="0"
               GridPane.halignment="CENTER">
            <font>
                <Font name="System Bold" size="26.0"/>
            </font>
        </Label>

        <!-- MAIN INPUT FORM -->
        <GridPane GridPane.rowIndex="1"
                  hgap="12" vgap="12">
            <padding>
                <Insets top="10" left="20" right="20"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints prefWidth="160"/>
                <ColumnConstraints prefWidth="240"/>
                <ColumnConstraints prefWidth="100"/> <!-- for side-by-side buttons -->
            </columnConstraints>

            <rowConstraints>
                <RowConstraints prefHeight="32"/>
                <RowConstraints prefHeight="32"/>
                <RowConstraints prefHeight="32"/>
                <RowConstraints prefHeight="32"/>
                <RowConstraints prefHeight="32"/>
                <RowConstraints prefHeight="32"/>
                <RowConstraints prefHeight="32"/>
                <RowConstraints prefHeight="40"/> <!-- buttons -->
                <RowConstraints prefHeight="60"/> <!-- preview list -->
            </rowConstraints>

            <children>

                <!-- 850 Number -->
                <Label text="850 Number:" textFill="#ffd942"
                       GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="creator850"
                           promptText="enter 9 digit 850"
                           onAction="#creator850Entered"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Email -->
                <Label text="UNCW Email:" textFill="#ffd942"
                       GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="creatorEmail"
                           promptText="example@uncw.edu"
                           onAction="#creatorEmailEntered"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Event Date -->
                <Label text="Event Date:" textFill="#ffd942"
                       GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="eventDatePicker"
                            onAction="#eventDateEntered"
                            GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- Event Time -->
                <Label text="Event Time:" textFill="#ffd942"
                       GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="eventTimePicker"
                          promptText="Select Time"
                          onAction="#eventTimeEntered"
                          GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <!-- Location -->
                <Label text="Event Location:" textFill="#ffd942"
                       GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="eventLocation"
                           onAction="#eventLocationEntered"
                           GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <!-- Description -->
                <Label text="Event Description:" textFill="#ffd942"
                       GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="eventDescription"
                           onAction="#eventDescriptionEntered"
                           GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <!-- Event Type -->
                <Label text="Event Type:" textFill="#ffd942"
                       GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <ComboBox fx:id="eventTypeSelector"
                          GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <!-- BUTTONS SIDE BY SIDE -->
                <Button fx:id="createEventButton"
                        text="CREATE"
                        style="-fx-background-color: GOLD;"
                        onAction="#createEventButtonPressed"
                        prefWidth="120"
                        GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                <Button fx:id="returnHomeButton"
                        text="HOME"
                        style="-fx-background-color: GOLD;"
                        onAction="#returnHomeButtonPressed"
                        prefWidth="90"
                        GridPane.rowIndex="7" GridPane.columnIndex="2"/>

                <!-- BOTTOM PREVIEW BOX (lifted) -->
                <ListView fx:id="eventListView"
                          prefHeight="55" maxHeight="60" minHeight="45"
                          prefWidth="340"
                          GridPane.rowIndex="8"
                          GridPane.columnIndex="0"
                          GridPane.columnSpan="3"
                          GridPane.halignment="CENTER"/>
            </children>
        </GridPane>
    </children>
</GridPane>
